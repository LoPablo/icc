{% extends "profile/_profile.twig" %}

{% block title %}{{ 'profile.apps.label'|trans }}{% endblock %}

{% block switch_active %}active{% endblock %}

{% block profile_card_body %}
    <div class="card-body">
        <form method="get" action="{{ path('dashboard') }}">
            <div class="mb-3 row">
                <label class="col-form-label col-sm-2 required" for="user">{{ 'label.user'|trans}}</label>
                <div class="col-sm-10">
                    <select name="_switch_user" id="user" class="form-control" data-choice="true">
                        {% for group in groups %}
                            <optgroup label="{{ group.key }}">
                                {% for user in group.items %}
                                    <option value="{{ user.idpId }}">{{ user.username }} ({{ user|user }})</option>
                                {% endfor %}
                            </optgroup>
                        {% endfor %}
                    </select>
                </div>
            </div>

            <div class="buttons">
                <button type="submit" class="btn btn-primary btn-sm">
                    <i class="fa fa-arrow-right"></i> {{ 'profile.switch.button'|trans }}
                </button>
            </div>
        </form>
    </div>
{% endblock %}