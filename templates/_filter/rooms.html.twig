<form role="form" method="get" class="form hidden-print">
    {% include "_filter/_params.html.twig" %}

    <div class="mb-3 {{ class|default('') }}">
        <label for="rooms" class="form-label">{{ 'label.rooms'|trans }}:</label>
        <select name="rooms[]" id="rooms" multiple="multiple" class="form-control" data-trigger="submit" data-choice="true">
            <option value="">{{ 'label.select.rooms'|trans }}</option>
            {% for r in roomsFilter.rooms %}
                <option value="{{ r.uuid }}" {% if r in roomsFilter.currentRooms %}selected="selected"{% endif %}>{{ r.name }}</option>
            {% endfor %}
        </select>
    </div>
</form>