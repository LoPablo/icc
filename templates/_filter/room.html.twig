<form role="form" method="get" class="form hidden-print">
    {% include "_filter/_params.html.twig" %}

    <div class="mb-3 {{ class|default('') }}">
        <label for="room" class="form-label">{{ 'label.room'|trans }}:</label>
        <select name="room" id="room" class="form-control" data-trigger="submit" data-choice="true">
            <option value="" placeholder>{{ 'label.select.room'|trans }}</option>
            {% for r in roomFilter.rooms %}
                <option value="{{ r.uuid }}" {% if roomFilter.currentRoom != null and roomFilter.currentRoom.id == r.id %}selected="selected"{% endif %}>{{ r.getName() }}</option>
            {% endfor %}
        </select>
    </div>
</form>